<h1>Restaurant Status</h1>


<h3>Tables</h3>
<table>
  <tr>
    <th>Table number</th>
    <th>Seats</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dining_tables.each do |dining_table| %>
  <tr>
    <td><%= dining_table.table_number %></td>
    <td><%= dining_table.seats %></td>
    <td><%= dining_table.status %></td>
    <td><%= link_to 'Edit', edit_dining_table_path(dining_table) %></td>
  </tr>
<% end %>
</table>

<h3>Orders</h3>
<table>
  <tr>
    <th>Table Number</th>
    <th>Started At</th>
    <th>Last Ordered At</th>
    <th>Total</th>
    <th>Paid?</th>
    <th></th>
  </tr>
<% if @orders %>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.dining_table_id %></td>
    <td><%= order.created_at %></td>
    <td><%= order.updated_at %></td>
    <td><%= order.total %></td>
    <td><%= order.status %></td>
    <td><%= link_to 'View', order_path(order) %></td>
  </tr>
  <% end %>
<% end %>
</table>
